@{
    ViewData["Title"] = "Home Page";
}

@model BooksListViewModel


@foreach (Book b in Model.Books)
{
    <div class="card m-1 p-1">
        <h3>@b.Title
            <span class="badge rounded-pill bg-primary text-white float-end"><small>@b.PageCount Pages</small></span>
        </h3>
        <ul>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Price: @b.Price</li>
        </ul>
    </div>
    
}

<div page-model="@Model.PaginationInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group"></div>
